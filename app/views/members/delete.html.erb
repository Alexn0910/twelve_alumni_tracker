<%= stylesheet_link_tag "/stylesheets/style.css" %>

<div class="jumbotron text-center">
	<h1>Remove Alumni</h1>
</div>

<%= form_for(@member, :method => 'delete') do |f| %>

	<div class="container text-center">
		<h2 class="mb-5">Are you sure you want to permanently remove this member?</h2>
		<h4><%= @member.firstName %> <%= @member.lastName %></h4>
	</div>
	
	<div class="container text-center mb-5 mt-5">
		<div class="row">
			<div class="col-sm order-sm-2">
				<%= f.submit :Submit, class:'btn btn-danger', value:"Delete" %>
				<% end %>
			</div>
			<div class="col-sm order-sm-1">
				<div type="button" class="btn btn-secondary">
					<%= link_to("Cancel", members_path, style:"color: white") %>
				</div>
			</div>
		</div>
	</div>
