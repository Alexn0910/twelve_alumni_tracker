<%= error_messages_for(f.object) %>

<table class="listings" summary="Member Form Fields">
    <tr>
        <th>First Name<span class="asterisk">*</span></th>
        <td><%= f.text_field(:firstName) %></td>
    </tr>
    <tr>
        <th>Last Name<span class="asterisk">*</span></th>
        <td><%= f.text_field(:lastName) %></td>
    </tr>
    <tr>
        <th>Class Year<span class="asterisk">*</span></th>
        <td><%= f.select :classYear, [2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023, 2024, 2025] %></td>
    </tr>
    <tr>
    <th>Major<span class="asterisk">*</span></th>
        <td><%= f.text_field(:major) %></td>
    </tr>
    <tr>
        <th>Email<span class="asterisk">*</span></th>
        <td><%= f.text_field(:email) %></td>
    </tr>
    <tr>
        <th>Phone Number</th>
        <td><%= f.text_field(:phone) %></td>
    </tr>
    <tr>
        <th>Social Media</th>
        <td>
                LinkedIn: <%= f.text_field :socialMediaL, :size=>"30" %>
                Instagram: <%= f.text_field :socialMediaI, :size=>"30" %>
                Facebook: <%= f.text_field :socialMediaF, :size=>"30" %>
                Twitter: <%= f.text_field :socialMediaT, :size=>"30" %><br>
                Other (please specify):<br><%= f.text_field :socialMediaO, :size=>"30" %>
        </td>
    </tr>
    <tr>
        <th>Current City</th>
        <td><%= f.text_field(:currentCity) %></td>
    </tr>
    <tr>
        <th>Company</th>
        <td><%= f.text_field(:company) %></td>
    </tr>
    <tr>
        <th>Join date<span class="asterisk">*</span></th>
        <td><%= f.date_select(:startDate, order: [:month, :year]) %></td>
    </tr>
    <tr>
        <th>End date<span class="asterisk">*</span></th>
        <td><%= f.date_select(:endDate, order: [:month, :year]) %></td>
    </tr>
    <tr>
        <th>Positions Held<span class="asterisk">*</span></th>
        <td>
            <%= f.collection_check_boxes :position_ids, Position.all, :id, :name do |b| %>
                <%= b.check_box %>
                <%= b.label %><br>
            <% end %>
        </td>    
    </tr>
</table>