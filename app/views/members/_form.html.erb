<%= error_messages_for(f.object) %>

<div class="container text-center">
	<table class="table table-hover">
        <%# ------------ FIRST & LAST NAME ------------ %>
        <tr>
            <th colspan="2" style="background-color: #353A3F; color: white;">Contact Information</th>
        </tr>
        <tr>
            <th>First Name<span class="asterisk">*</span></th>
            <td><%= f.text_field(:first_name, :class => "form-control w-auto m-auto") %></td>
        </tr>
        <tr>
            <th>Last Name<span class="asterisk">*</span></th>
            <td><%= f.text_field(:last_name, :class => "form-control w-auto m-auto") %></td>
        </tr>
        <tr>
            <th>Email<span class="asterisk">*</span></th>
            <td><%= f.text_field(:email, :class => "form-control w-auto m-auto") %></td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td><%= f.text_field(:phone, :class => "form-control w-auto m-auto") %></td>
        </tr>
        <%# ------------ SOCIAL MEDIA ------------ %>
        <tr>
            <th colspan="2" style="background-color: #353A3F; color: white;">Social Media</th>
        </tr>
        <tr>
            <th style="border: unset;">LinkedIn:</th>
            <td style="border: unset;"><%= f.text_field :socialMediaL, :size=>"30", :class => "form-control m-auto" %></td>
        </tr>
        <tr>
            <th style="border: unset;">Instagram:</th>
            <td style="border: unset;"><%= f.text_field :socialMediaI, :size=>"30", :class => "form-control m-auto" %></td>
        </tr>
        <tr>
            <th style="border: unset;">Facebook:</th>
            <td style="border: unset;"><%= f.text_field :socialMediaF, :size=>"30", :class => "form-control m-auto" %></td>
        </tr>
        <tr>
            <th style="border: unset;">Twitter:</th>
            <td style="border: unset;"><%= f.text_field :socialMediaT, :size=>"30", :class => "form-control m-auto" %></td>
        </tr>
        <tr>
            <th style="border: unset;">Other (please specify):</th>
            <td style="border: unset;"><%= f.text_field :socialMediaO, :size=>"30", :class => "form-control m-auto" %></td>
        </tr>
        <%# ------------ Education ------------ %>
        <tr>
            <th colspan="2" style="background-color: #353A3F; color: white;">Education</th>
        </tr>

        <tr>
            <th>Major<span class="asterisk">*</span></th>
            <td><%= f.text_field(:major, :class => "form-control m-auto") %></td>
        </tr>

        <tr>
            <th>Class Year<span class="asterisk">*</span></th>
            <td><%= f.select :class_year, [2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023, 2024, 2025], {}, { :class => "custom-select w-auto" }%> </td>
        </tr>
        <%# ------------ Location & Employment ------------ %>
        <tr>
            <th colspan="2" style="background-color: #353A3F; color: white;">Location & Employment</th>
        </tr>

        <tr>
            <th>Current City</th>
            <td><%= f.text_field(:current_city, :class => "form-control m-auto") %></td>
        </tr>
        <tr>
            <th>Company</th>
            <td><%= f.text_field(:company, :class => "form-control m-auto") %></td>
        </tr>
        <%# ------------ Twelve Organization Involvement ------------ %>
        <tr>
            <th colspan="2" style="background-color: #353A3F; color: white;">Twelve Organization Involvement</th>
        </tr>
        <tr>
            <th>Positions Held<span class="asterisk">*</span></th>
            <td>
                <%= f.collection_check_boxes :position_ids, Position.all, :id, :name do |b| %>
                    <%= b.check_box %>
                    <%= b.label %><br>
                <% end %>
            </td>    
        </tr>
        <tr>
            <th>Semesters<span class="asterisk">*</span></th>
            <td>
                <%= f.collection_check_boxes :semester_ids, Semester.all.reverse_order, :id, :name do |b| %>
                    <%= b.check_box %>
                    <%= b.label %><br>
                <% end %>
            </td>
        </tr>
    </table>
</div>
