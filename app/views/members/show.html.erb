<%= stylesheet_link_tag "/stylesheets/style.css" %>
<%= stylesheet_link_tag "/stylesheets/show.css" %>

<div class="page-title">
	<div class="nav-link">
		<%= button_to " << Back to List ", members_path, method: :get %>
	</div>
	<h1>Show Member</h1>
</div>

<table  class="listings" summary="Member detail view">
	<tr>
		<th>First Name</th>
		<td><%= @member.firstName %></td>
	</tr>
	<tr>
		<th>Last Name</th>
		<td><%= @member.lastName %></td>
	</tr>
	<tr>
		<th>Class Year</th>
		<td><%= @member.classYear %></td>
	</tr>
	<tr>
		<th>Email</th>
		<td><%= @member.email %></td>
	</tr>
	<tr>
		<th>Phone Number</th>
		<td><%= @member.phone %></td>
	</tr>
	<tr>
		<th>Social Media</th>
		<td>
			<% if (@member.socialMediaL.length != 0) then %>
		    	<li>LinkedIn: <%= @member.socialMediaL %></li>
			<% end %>
			<% if (@member.socialMediaI.length != 0) then %>
				<li>Instagram: <%= @member.socialMediaI %><br></li>
			<% end %>
			<% if (@member.socialMediaF.length != 0) then %>
				<li>Facebook: <%= @member.socialMediaF %><br></li>
			<% end %>
			<% if (@member.socialMediaT.length != 0) then %>
				<li>Twitter: <%= @member.socialMediaT %><br></li>
			<% end %>
			<% if (@member.socialMediaL.length == 0) && (@member.socialMediaT.length == 0) && (@member.socialMediaI.length == 0) && (@member.socialMediaF.length == 0) then %>
				N/A
			<% end %>
		</td>
	</tr>
	<tr>
		<th>Current City</th>
		<td><%= @member.currentCity %></td>
	</tr>
	<tr>
		<th>Company</th>
		<td><%= @member.company %></td>
	</tr>
	<tr>
		<th>Join date</th>
		<td><%= @member.startDate.strftime("%B %Y") %></td>
	</tr>
	<tr>
		<th>End date</th>
		<td><%= @member.endDate.strftime("%B %Y") %></td>
	</tr>
	<tr>
		<th>Positions Held</th>
		<td>
			<% @member.positions.each do |b| %>
				<li><%= b.name %></li>
			<% end %>
		</td>
	</tr>
</table>