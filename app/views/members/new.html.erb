<%= stylesheet_link_tag "/stylesheets/style.css" %>

<div class="jumbotron text-center">
	<h1>Add New Alumni</h1>
</div>
	
<div class="container text-center mb-4">
	<h6>Fields marked with (*) are required.</h6>
</div>

<%= form_for(@member, :url => members_path, :method => 'post') do |f| %>

	<%= render(:partial => 'form', :locals => {:f => f})%>
	
	<div class="container text-center mb-5 mt-5">
		<div class="row">
			<div class="col-sm order-sm-2">
				<%= f.submit :Submit, class: 'btn btn-success' %>
				<% end %>
			</div>
			<div class="col-sm order-sm-1">
				<div type="button" class="btn btn-danger">
					<%= link_to("Cancel", members_path, style:"color: white") %>
				</div>
			</div>
		</div>
	</div>
