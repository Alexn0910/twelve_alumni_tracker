<%= stylesheet_link_tag "/stylesheets/style.css" %>

<script>
    function searchClicked() {
        console.log('test')
        var searchValue = document.getElementById("search-box").value
        window.location.href = "/members?search=" + searchValue
    }
</script>

<div class="jumbotron text-center mb-4">
	<h1 class="display-1">Alumni</h1>
	<div class="btn btn-dark">
		<%= link_to("Add New Alumni", new_member_path, style:"color: white", value:"AddNewMemberBtn") %>
	</div>
</div>

<div class="container text-center">

    <div class="row d-flex justify-content-center mb-4">
        <input class="form-control w-auto " placeholder="Text..." id="search-box" type="text" value="<%=@searchVal%>"></input>
        <button class="btn btn-primary ml-1" id="search-btn" onclick="searchClicked()">Search</button>
    </div>

    <script>
        var searchBox = document.getElementById("search-box");
        searchBox.addEventListener("keyup", function(event) {
            if (event.keyCode === 13) {
                event.preventDefault();
                document.getElementById("search-btn").click();
            }
        });
    </script>

	<% if @searchVal != "" %>
    <a class="btn btn-info mb-4" href="/members" role="button">Clear Results</a>
    <script>
        document.getElementById("search-box").focus()
    </script>
    <% end %>

</div>

<div class="container text-center">
	<table class="table table-bordered table-striped table-hover">
		<thead class="table-dark">	
			<tr>
				<th class = "text-center">First Name</th>
				<th class = "text-center">Last Name</th>
				<th class = "text-center">Class Year</th>
				<th class = "text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @members.each do |member| %>
			<tr>
				<td><%= member.first_name %></td>
				<td><%= member.last_name %></td>
				<td><%= member.class_year %></td>
				<td>
					<%= link_to("Show", member_path(member), :class => 'action show') %> |
					<%= link_to("Edit", edit_member_path(member), :class => 'action edit') %> |
					<%= link_to("Delete", delete_member_path(member), :class => 'action delete') %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
