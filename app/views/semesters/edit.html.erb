<%= stylesheet_link_tag "/stylesheets/style.css" %>

<div class="jumbotron text-center">
	<h1>Edit Semester</h1>
</div>

<div class="container text-center mb-3">
	<h6>Fields marked with (<span class="asterisk">*</span>) are required.</h6>
</div>

<%= form_for(@semester) do |f| %>

	<div class="container">
		<div class="mt-4">
			<%= render(:partial => 'form', :locals => {:f => f})%>
		</div>
	</div>
	
	<div class="container text-center mb-5 mt-5">
		<div class="row">
			<div class="col-sm order-sm-2">
				<%= f.submit :Submit, class: 'btn btn-success' %>
				<% end %>
			</div>
			<div class="col-sm order-sm-1">
				<div type="button" class="btn btn-danger">
					<%= link_to("Cancel", semesters_path, style:"color: white") %>
				</div>
			</div>
		</div>
	</div>